<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_shade</item>
        <item name="colorPrimaryVariant">@color/purple_shade</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_shade</item>
        <item name="colorSecondaryVariant">@color/purple_shade</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/gilroy_light</item>
    </style>
    
   <style name="boldtext" parent="Base.Widget.AppCompat.TextView">
       <item name="fontFamily">@font/gilroyextrabold</item>
       <item name="android:textColor">@color/white</item>
   </style>

    <style name="lighttext" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="bottomshhet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>
</resources>